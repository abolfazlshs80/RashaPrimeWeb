
@model RashaPrimeWeb.Application.Common.Models.PaginatedResult<RashaPrimeWeb.Application.CQRS.Category.Queries.GetAllCategory.GetAllCategoryDto>



@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">

    <title>Multiselect-dropdown demo!</title>

    <style>
  select {width: 20em;}
</style>
</head>
<body>

<div class="mx-2">
    <h1>دسته بندی مور نطر را انتخاب کنید</h1>
    <div class="row">
        <div class="col ">
            <label>دسته بندی ها</label>

                <select name="Model.CategoryId" id="field1" multiple onchange="console.log(Array.from(this.selectedOptions).map(x=>x.value??x.text))" multiselect-hide-x="true">
            
                    @foreach (var item in Model.Items)
                    {
                        
                        <option value="@item.Id">@item.Name</option>
                    }
                   
           
           
     
            </select>

        </div></div>

    <br/><br/><br/>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8" crossorigin="anonymous"></script>
<script src="/admin/js/dropdownlistsearch/multiselect-dropdown.js"></script>
</body>
</html>






